@page "/admin/books/details/{id:long}"
<h3 class="bg-info text-white text-center p-1">Details</h3>
<table class="table table-sm table-bordered table-striped">
    <tbody>
        <tr><th>ID</th><td>@SeaFood.SeaFoodID</td></tr>
        <tr><th>Title</th><td>@SeaFood.Title</td></tr>
        <tr><th>Description</th><td>@SeaFood.weight</td></tr>
        <tr><th>Genre</th><td>@SeaFood.Genre</td></tr>
        <tr><th>Price</th><td>@SeaFood.Price.ToString("C")</td></tr>
    </tbody>
</table>
<NavLink class="btn btn-warning" href="@EditUrl">Edit</NavLink>
<NavLink class="btn btn-secondary" href="/admin/seafoods">Back</NavLink>
@code {
    [Inject]
    public ISeaFoodStoreRepository Repository { get; set; }
    [Parameter]
    public long Id { get; set; }
    public SeaFood SeaFood { get; set; }
    protected override void OnParametersSet()
    {
        SeaFood = Repository.SeaFoods.FirstOrDefault(b => b.SeaFoodID == Id);
    }
    public string EditUrl => $"/admin/books/edit/{SeaFood.SeaFoodID}";
}